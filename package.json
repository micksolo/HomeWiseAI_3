{
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "type-check": "tsc --noEmit"
  },
  "vitest": {
    "coverage": {
      "reporter": ["text", "json", "html"],
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    },
    "environment": "jsdom",
    "setupFiles": ["./src/test/setup.ts"]
  }
} 